{
  "author": "Thierry Wong",
  "description": "Styleguide with storybook",
  "license": "AGPL-3.0-only",
  "name": "@gnowth/styleguide-boilerplate",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "sideEffects": false,
  "version": "0.0.0",
  "eslintConfig": {
    "extends": [
      "@gnowth/eslint-config"
    ]
  },
  "jest": {
    "preset": "@gnowth/jest-config"
  },
  "repository": {
    "directory": "packages/boilerplate-styleguide",
    "type": "git",
    "url": "https://github.com/gnowth/smart.git"
  },
  "dependencies": {
    "@gnowth/users-app": "0.0.0",
    "@gnowth/storybook-preset": "0.0.0",
    "react": "18.2.0"
  },
  "devDependencies": {
    "@gnowth/babel-preset": "0.0.0",
    "@gnowth/eslint-config": "0.0.0",
    "@gnowth/jest-config": "0.0.0",
    "@gnowth/prettier-config": "0.0.0",
    "@gnowth/typescript-config": "0.0.0",
    "@storybook/builder-webpack5": "7.0.25",
    "@storybook/jest": "0.1.0",
    "@storybook/manager-webpack5": "6.5.16",
    "@storybook/nextjs": "7.0.25",
    "@storybook/node-logger": "7.0.25",
    "@storybook/react": "7.0.25",
    "@storybook/test-runner": "0.11.0",
    "@storybook/testing-library": "0.2.0",
    "chromatic": "6.19.9"
  },
  "scripts": {
    "build-ci": "storybook build --quiet --disable-telemetry",
    "build-dev": "storybook build --disable-telemetry -o ../../build/web/styleguide",
    "build": "storybook build --quiet --disable-telemetry -o ../../build/web/styleguide",
    "clean:modules": "rm -rf node_modules",
    "clean:temp": "rm -rf *.log .turbo",
    "lint:script": "eslint --ext mdx,ts,tsx .",
    "lint": "npm run lint:script",
    "publish": "chromatic --zip --storybook-build-dir='../../build/web/styleguide' --project-token=$STYLEGUIDE_CHROMATIC_TOKEN",
    "start-ci": "storybook dev -p 6006 --ci",
    "start-dev": "storybook dev -p 6006",
    "test:e2e": "npm run test:interactions",
    "test:interactions": "test-storybook",
    "typecheck": "tsc"
  }
}
