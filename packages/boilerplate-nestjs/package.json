{
  "author": "Thierry Wong",
  "description": "Boilerplate for nestjs",
  "license": "AGPL-3.0-only",
  "name": "@boilerplate/nestjs",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "sideEffects": false,
  "version": "0.0.0",
  "eslintConfig": {
    "extends": [
      "@gnowth/eslint-config/typescript"
    ]
  },
  "jest": {
    "preset": "@gnowth/jest-config"
  },
  "repository": {
    "directory": "packages/boilerplate-nestjs",
    "type": "git",
    "url": "https://github.com/gnowth/smart.git"
  },
  "dependencies": {
    "@nestjs/common": "9.0.7",
    "@nestjs/core": "9.0.7",
    "@nestjs/platform-express": "9.0.7",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.6"
  },
  "devDependencies": {
    "@gnowth/eslint-config": "0.0.0",
    "@gnowth/jest-config": "0.0.0",
    "@gnowth/prettier-config": "0.0.0",
    "@gnowth/typescript-config": "0.0.0",
    "@nestjs/cli": "9.0.0",
    "@nestjs/schematics": "9.0.1",
    "@nestjs/testing": "9.0.7",
    "@types/express": "4.17.13",
    "@types/supertest": "2.0.12",
    "supertest": "6.2.4"
  },
  "scripts": {
    "build": "cp ../../LICENSE LICENSE && nest build",
    "clean:temp": "rm -rf LICENSE && rm -rf dist",
    "lint": "npm run lint:script",
    "lint:script": "eslint --ext ts .",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc"
  }
}
