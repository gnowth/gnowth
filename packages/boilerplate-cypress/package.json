{
  "author": "Thierry Wong",
  "description": "Boilerplate for end to end with cypress",
  "license": "AGPL-3.0-only",
  "name": "@gnowth/cypress-boilerplate",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "sideEffects": false,
  "version": "0.0.0",
  "eslintConfig": {
    "extends": [
      "@gnowth/eslint-config/typescript"
    ]
  },
  "repository": {
    "directory": "packages/boilerplate-cypress",
    "type": "git",
    "url": "https://github.com/gnowth/smart.git"
  },
  "dependencies": {
    "cypress": "12.17.0",
    "local-cypress": "1.2.6"
  },
  "devDependencies": {
    "@gnowth/eslint-config": "0.0.0",
    "@gnowth/prettier-config": "0.0.0",
    "@gnowth/typescript-config": "0.0.0"
  },
  "scripts": {
    "clean:modules": "rm -rf node_modules",
    "clean:temp": "rm -rf cypress/media .turbo",
    "lint:script": "eslint --ext ts .",
    "lint": "npm run lint:script",
    "test:mock": "cypress run --config baseUrl=$BASE_URL_TEST --config-file cypress/cypress.config.mock.ts --headless",
    "test:regression:chromium-mobile": "cypress run --config baseUrl=$BASE_URL_TEST,viewportHeight=667,viewportWidth=375 --config-file cypress/cypress.config.regression.ts --headless --browser chrome",
    "test:regression:chromium": "cypress run --config baseUrl=$BASE_URL_TEST --config-file cypress/cypress.config.regression.ts --headless --browser chrome",
    "test:regression:firefox-mobile": "cypress run --config baseUrl=$BASE_URL_TEST,viewportHeight=667,viewportWidth=375 --config-file cypress/cypress.config.regression.ts --headless --browser firefox",
    "test:regression:firefox": "cypress run --config baseUrl=$BASE_URL_TEST --config-file cypress/cypress.config.regression.ts --headless --browser firefox",
    "test:smoke": "cypress run --config baseUrl=$BASE_URL_TEST --config-file cypress/cypress.config.smoke.ts --headless",
    "typecheck": "tsc"
  }
}
