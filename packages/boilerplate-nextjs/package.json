{
  "author": "Thierry Wong",
  "description": "Boilerplate for mono application",
  "license": "AGPL-3.0-only",
  "name": "@boilerplate/nextjs",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "sideEffects": false,
  "version": "0.0.0",
  "eslintConfig": {
    "extends": [
      "next",
      "next/core-web-vitals",
      "@gnowth/eslint-config"
    ],
    "rules": {
      "@next/next/no-html-link-for-pages": "off"
    }
  },
  "repository": {
    "directory": "packages/boilerplate-nextjs",
    "type": "git",
    "url": "https://github.com/gnowth/smart.git"
  },
  "dependencies?": {
    "@emotion/react": "required for chakra-ui",
    "@emotion/styled": "required for chakra-ui",
    "framer-motion": "required for chakra-ui"
  },
  "dependencies": {
    "@app/core": "0.0.0",
    "@app/recipes": "0.0.0",
    "@app/users": "0.0.0",
    "@chakra-ui/react": "2.3.4",
    "@emotion/react": "11.10.4",
    "@emotion/styled": "11.10.4",
    "@next/mdx": "12.3.1",
    "axios": "0.27.2",
    "framer-motion": "7.3.6",
    "i18next": "21.9.2",
    "i18next-browser-languagedetector": "6.1.5",
    "i18next-http-backend": "1.4.4",
    "inflected": "2.1.0",
    "next": "12.3.1",
    "next-mdx-remote": "4.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "11.18.6",
    "react-query": "3.39.2",
    "recoil": "0.7.5",
    "rxjs": "7.5.6",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "7.5.0",
    "@gnowth/eslint-config": "0.0.0",
    "@gnowth/prettier-config": "0.0.0",
    "@gnowth/typescript-config": "0.0.0",
    "@mdx-js/loader": "2.1.3",
    "@next/bundle-analyzer": "12.3.1",
    "@types/inflected": "1.1.29",
    "@types/react": "18.0.20",
    "@types/uuid": "8.3.4",
    "eslint-config-next": "12.3.1",
    "gray-matter": "4.0.3",
    "i18next-parser": "6.5.0",
    "miragejs": "0.1.45",
    "next-compose-plugins": "2.2.1"
  },
  "scripts": {
    "build-analyze": "ANALYZE=true next build",
    "build-dev": "next build && next export -o dist",
    "build": "cp ../../LICENSE LICENSE && next build && next export -o dist",
    "clean:temp": "rm -rf LICENSE dist .next",
    "internationalisation:extract": "i18next 'src/**/*.tsx' -c ./i18next-parser.config.js",
    "lint:script": "eslint --ext js,ts,tsx .",
    "lint": "npm run lint:script",
    "start-dev": "next dev",
    "start": "next start",
    "typecheck": "tsc"
  }
}
