{
  "author": "Thierry Wong",
  "description": "Boilerplate for mono application",
  "license": "MIT",
  "name": "@gnowth/boilerplate-nextjs",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "sideEffects": false,
  "version": "0.0.0",
  "eslintConfig": {
    "extends": [
      "next",
      "next/core-web-vitals",
      "@gnowth/eslint-config"
    ],
    "rules": {
      "@next/next/no-html-link-for-pages": "off"
    }
  },
  "repository": {
    "directory": "packages/boilerplate-nextjs",
    "type": "git",
    "url": "https://github.com/gnowth/smart.git"
  },
  "dependencies": {
    "@chakra-ui/icons": "2.0.4",
    "@chakra-ui/react": "2.2.4",
    "@emotion/react": "11.9.3",
    "@emotion/styled": "11.9.3",
    "@next/mdx": "12.2.2",
    "axios": "0.27.2",
    "formik": "2.2.9",
    "framer-motion": "6.5.1",
    "i18next": "21.8.14",
    "i18next-browser-languagedetector": "6.1.4",
    "i18next-http-backend": "1.4.1",
    "inflected": "2.1.0",
    "next": "12.2.2",
    "next-mdx-remote": "4.0.3",
    "ramda": "0.28.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "3.1.4",
    "react-i18next": "11.18.1",
    "react-query": "3.39.2",
    "recoil": "0.7.4",
    "rxjs": "7.5.6",
    "tinacms": "0.68.13",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "7.3.0",
    "@gnowth/eslint-config": "0.0.0",
    "@gnowth/prettier-config": "0.0.0",
    "@gnowth/typescript-config": "0.0.0",
    "@mdx-js/loader": "2.1.2",
    "@next/bundle-analyzer": "12.2.2",
    "@tinacms/cli": "0.60.26",
    "@types/inflected": "1.1.29",
    "@types/ramda": "0.28.15",
    "@types/react": "18.0.15",
    "@types/uuid": "8.3.4",
    "eslint-config-next": "12.2.2",
    "gray-matter": "4.0.3",
    "i18next-parser": "6.5.0",
    "miragejs": "0.1.45",
    "next-compose-plugins": "2.2.1"
  },
  "scripts": {
    "build": "cp ../../LICENSE LICENSE && tinacms server:start -c 'next build' && next export -o dist",
    "build:dev": "cp ../../LICENSE LICENSE && tinacms server:start -c 'next build' && next export -o dist",
    "build:analyze": "ANALYZE=true next build",
    "clean:temp": "rm -rf dist && rm -rf .next && rm -rf LICENSE",
    "dev": "tinacms server:start -c 'next dev'",
    "internationalisation:extract": "i18next 'src/**/*.tsx' -c ./i18next-parser.config.js",
    "lint": "npm run lint:script",
    "lint:script": "eslint --ext .js,.ts,.jsx,.tsx .",
    "start": "tinacms server:start -c 'next start'",
    "typecheck": "tsc"
  }
}
