{
  "author": "Thierry Wong",
  "description": "Boilerplate for mono application",
  "license": "AGPL-3.0-only",
  "name": "@gnowth/nextjs-boilerplate",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "sideEffects": false,
  "version": "0.0.0",
  "eslintConfig": {
    "extends": [
      "next",
      "next/core-web-vitals",
      "@gnowth/eslint-config"
    ],
    "rules": {
      "@next/next/no-html-link-for-pages": "off"
    }
  },
  "repository": {
    "directory": "packages/boilerplate-nextjs",
    "type": "git",
    "url": "https://github.com/gnowth/gnowth.git"
  },
  "dependencies": {
    "@gnowth/app-recipes": "0.0.0",
    "@gnowth/app-users": "0.0.0",
    "@gnowth/lib-react": "0.0.0",
    "@gnowth/logic-core": "0.0.0",
    "@chakra-ui/react": "2.8.2",
    "@next/mdx": "14.2.5",
    "i18next": "23.12.3",
    "i18next-browser-languagedetector": "8.0.0",
    "i18next-http-backend": "2.5.2",
    "next": "14.2.5",
    "next-mdx-remote": "5.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "13.2.2",
    "react-query": "3.39.3",
    "recoil": "0.7.7",
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@gnowth/eslint-config": "0.0.0",
    "@gnowth/prettier-config": "0.0.0",
    "@gnowth/typescript-config": "0.0.0",
    "@mdx-js/loader": "3.0.1",
    "@next/bundle-analyzer": "14.2.5",
    "@types/react": "18.3.3",
    "@types/uuid": "10.0.0",
    "eslint-config-next": "13.5.6",
    "gray-matter": "4.0.3",
    "i18next-parser": "9.0.2"
  },
  "scripts": {
    "build-analyze": "ANALYZE=true next build",
    "build-dev": "next build",
    "build": "next build",
    "clean:modules": "rm -rf node_modules",
    "clean:temp": "rm -rf .next .turbo",
    "internationalisation:extract": "i18next 'src/**/*.tsx' -c ./i18next-parser.config.js",
    "lint:script": "eslint --ext js,ts,tsx .",
    "lint": "npm run lint:script",
    "start-dev": "next dev",
    "start": "next start",
    "typecheck": "tsc"
  }
}
