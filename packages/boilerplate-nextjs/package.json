    "clean:temp": "rm -rf .next .turbo",
    "internationalisation:extract": "i18next 'src/**/*.tsx' -c ./i18next-parser.config.js",
    "lint:script": "eslint --ext ts,tsx .",
    "lint": "npm run lint:script",
    "start-dev": "next dev",
    "start": "next start",
    "typecheck": "tsc"
  }
