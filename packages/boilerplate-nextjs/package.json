{
  "author": "Thierry Wong",
  "description": "Boilerplate for mono application",
  "license": "MIT",
  "name": "@gnowth/boilerplate-nextjs",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "sideEffects": false,
  "version": "0.0.0",
  "eslintConfig": {
    "extends": [
      "next",
      "next/core-web-vitals",
      "@gnowth/eslint-config"
    ],
    "rules": {
      "@next/next/no-html-link-for-pages": "off"
    }
  },
  "repository": {
    "directory": "packages/boilerplate-nextjs",
    "type": "git",
    "url": "https://github.com/gnowth/smart.git"
  },
  "dependencies": {
    "@chakra-ui/icons": "2.0.2",
    "@chakra-ui/react": "2.2.1",
    "@emotion/react": "11.9.3",
    "@emotion/styled": "11.9.3",
    "@next/mdx": "12.1.6",
    "axios": "0.27.2",
    "formik": "2.2.9",
    "framer-motion": "6.3.11",
    "i18next": "21.8.10",
    "i18next-browser-languagedetector": "6.1.4",
    "i18next-http-backend": "1.4.1",
    "inflected": "2.1.0",
    "next": "12.1.6",
    "ramda": "0.28.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "3.1.4",
    "react-i18next": "11.17.2",
    "react-query": "3.39.1",
    "recoil": "0.7.3",
    "rxjs": "7.5.5",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "7.2.0",
    "@gnowth/eslint-config": "0.0.0",
    "@gnowth/prettier-config": "0.0.0",
    "@gnowth/typescript-config": "0.0.0",
    "@mdx-js/loader": "2.1.2",
    "@types/inflected": "1.1.29",
    "@types/ramda": "0.28.14",
    "@types/react": "18.0.14",
    "@types/uuid": "8.3.4",
    "eslint-config-next": "12.1.6",
    "i18next-parser": "6.5.0",
    "miragejs": "0.1.45"
  },
  "scripts": {
    "build": "cp ../../LICENSE LICENSE && next build && next export -o dist",
    "build:dev": "cp ../../LICENSE LICENSE && next build && next export -o dist",
    "clean:temp": "rm -rf dist && rm -rf .next && rm -rf LICENSE",
    "dev": "next dev",
    "internationalisation:extract": "i18next 'src/**/*.tsx' -c ./configs/i18next-parser.config.js",
    "lint": "npm run lint:script",
    "lint:script": "eslint --ext .js,.ts,.jsx,.tsx .",
    "start": "next start",
    "typecheck": "tsc"
  }
}
