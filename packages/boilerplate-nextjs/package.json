{
  "author": "Thierry Wong",
  "description": "Boilerplate for mono application",
  "license": "MIT",
  "name": "@gnowth/boilerplate-nextjs",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "sideEffects": false,
  "version": "0.0.0",
  "eslintConfig": {
    "extends": [
      "next",
      "next/core-web-vitals",
      "@gnowth/eslint-config"
    ],
    "rules": {
      "@next/next/no-html-link-for-pages": "off"
    }
  },
  "repository": {
    "directory": "packages/boilerplate-nextjs",
    "type": "git",
    "url": "https://github.com/gnowth/gnowth.git"
  },
  "dependencies": {
    "@next/mdx": "12.1.0",
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@gnowth/eslint-config": "0.0.0",
    "@gnowth/prettier-config": "0.0.0",
    "@gnowth/typescript-config": "0.0.0",
    "@types/react": "17.0.39",
    "eslint-config-next": "12.1.0"
  },
  "scripts": {
    "build": "next build && next export -o dist",
    "build:dev": "next build && next export -o dist",
    "clean:temp": "rm -rf dist && rm -rf .next",
    "dev": "next dev",
    "lint": "npm run lint:script",
    "lint:script": "eslint --ext .js,.ts,.jsx,.tsx .",
    "start": "next start",
    "typecheck": "tsc"
  }
}
