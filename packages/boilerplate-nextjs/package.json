    "@gnowth/app-users": "0.0.0",
    "@gnowth/lib-react": "0.0.0",
    "@gnowth/theme-standard": "0.0.0",
    "@next/mdx": "14.2.13",
    "@tanstack/react-query": "5.56.2",
    "next": "14.2.13",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "recoil": "0.7.7",
    "rxjs": "7.8.1",
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "9.0.1",
