{
  "author": "Thierry Wong",
  "description": "Boilerplate for mono application",
  "license": "AGPL-3.0-only",
  "name": "@gnowth/nextjs-boilerplate",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "sideEffects": false,
  "version": "0.0.0",
  "eslintConfig": {
    "extends": [
      "next",
      "next/core-web-vitals",
      "@gnowth/eslint-config"
    ],
    "rules": {
      "@next/next/no-html-link-for-pages": "off"
    }
  },
  "repository": {
    "directory": "packages/boilerplate-nextjs",
    "type": "git",
    "url": "https://github.com/gnowth/smart.git"
  },
  "dependencies?": {
    "@emotion/react": "required for chakra-ui",
    "@emotion/styled": "required for chakra-ui",
    "framer-motion": "required for chakra-ui"
  },
  "dependencies": {
    "@gnowth/core-app": "0.0.0",
    "@gnowth/recipes-app": "0.0.0",
    "@gnowth/users-app": "0.0.0",
    "@chakra-ui/react": "2.7.0",
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@next/mdx": "13.4.6",
    "axios": "1.4.0",
    "framer-motion": "7.6.5",
    "i18next": "22.0.4",
    "i18next-browser-languagedetector": "7.0.2",
    "i18next-http-backend": "2.2.1",
    "inflected": "2.1.0",
    "next": "13.4.6",
    "next-mdx-remote": "4.4.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "12.0.0",
    "react-query": "3.39.3",
    "recoil": "0.7.6",
    "rxjs": "7.8.1",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "7.6.0",
    "@gnowth/eslint-config": "0.0.0",
    "@gnowth/prettier-config": "0.0.0",
    "@gnowth/typescript-config": "0.0.0",
    "@mdx-js/loader": "2.3.0",
    "@next/bundle-analyzer": "13.4.6",
    "@types/inflected": "1.1.29",
    "@types/react": "18.2.12",
    "@types/uuid": "8.3.4",
    "eslint-config-next": "13.4.6",
    "gray-matter": "4.0.3",
    "i18next-parser": "6.6.0",
    "miragejs": "0.1.45"
  },
  "scripts": {
    "build-analyze": "ANALYZE=true next build",
    "build-dev": "next build && next export -o dist",
    "build": "next build && next export -o dist",
    "clean:modules": "rm -rf node_modules",
    "clean:temp": "rm -rf dist .next .turbo",
    "internationalisation:extract": "i18next 'src/**/*.tsx' -c ./i18next-parser.config.js",
    "lint:script": "eslint --ext js,ts,tsx .",
    "lint": "npm run lint:script",
    "start-dev": "next dev",
    "start": "next start",
    "typecheck": "tsc"
  }
}
