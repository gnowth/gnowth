{
  "author": "Thierry Wong",
  "description": "Styleguide with storybook",
  "license": "AGPL-3.0-only",
  "name": "@boilerplate/styleguide",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "sideEffects": false,
  "version": "0.0.0",
  "eslintConfig": {
    "extends": [
      "@gnowth/eslint-config"
    ]
  },
  "jest": {
    "preset": "@gnowth/jest-config"
  },
  "repository": {
    "directory": "packages/boilerplate-storybook",
    "type": "git",
    "url": "https://github.com/gnowth/smart.git"
  },
  "dependencies": {
    "@boilerplate/nextjs": "0.0.0",
    "@gnowth/storybook-preset": "0.0.0",
    "react": "18.2.0"
  },
  "devDependencies": {
    "@gnowth/eslint-config": "0.0.0",
    "@gnowth/jest-config": "0.0.0",
    "@gnowth/prettier-config": "0.0.0",
    "@gnowth/typescript-config": "0.0.0",
    "@storybook/addon-storyshots": "6.5.9",
    "@storybook/addon-storyshots-puppeteer": "6.5.9",
    "@storybook/builder-webpack5": "6.5.9",
    "@storybook/core-common": "6.5.9",
    "@storybook/jest": "0.0.10",
    "@storybook/manager-webpack5": "6.5.9",
    "@storybook/node-logger": "6.5.9",
    "@storybook/react": "6.5.9",
    "@storybook/test-runner": "0.5.0",
    "@storybook/testing-library": "0.0.13",
    "@types/puppeteer": "5.4.6",
    "chromatic": "6.7.3",
    "puppeteer": "15.5.0"
  },
  "scripts": {
    "build": "cp ../../LICENSE LICENSE && build-storybook --quiet --disable-telemetry",
    "build:dev": "build-storybook --disable-telemetry",
    "build-storybook": "build-storybook --quiet --disable-telemetry",
    "clean:temp": "rm -rf LICENSE && rm -rf *.log && rm -rf storybook-static && rm -rf '__image_snapshots__/__diff_output__'",
    "lint": "npm run lint:script",
    "lint:script": "eslint --ext mdx,ts,tsx .",
    "publish:ci": "chromatic --ci --zip --project-token=$STYLEGUIDE_CHROMATIC_TOKEN --exit-once-uploaded",
    "publish": "chromatic --zip --storybook-build-dir=storybook-static --project-token=$STYLEGUIDE_CHROMATIC_TOKEN",
    "start:ci": "start-storybook -p 6006 --ci",
    "start:dev": "start-storybook -p 6006",
    "test:e2e": "npm run test:interactions && npm run test:storyshots",
    "test:interactions": "test-storybook",
    "test:storyshots?": "DEBT: issue with generating snapshot locally and in ci does not match",
    "test:storyshots": "echo jest --testMatch='**/*.snapshot.ts'",
    "typecheck": "tsc"
  }
}
