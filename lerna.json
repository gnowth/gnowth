{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "command": {
    "publish": {
      "allowBranch": "release-*"
    },
    "version": {
      "allowBranch": "release-*",
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": ["**/__fixtures__/**", "**/*.md"],
  "packages": [".", "packages/*"],
  "version": "independent"
}
