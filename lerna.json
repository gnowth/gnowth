{
  "command": {
    "publish": {
      "allowBranch": "release-*"
    },
    "version": {
      "allowBranch": "release-*",
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": ["**/__fixtures__/**", "**/*.md"],
  "packages": [".", "packages/*"],
  "useWorkspaces": true,
  "version": "independent"
}
