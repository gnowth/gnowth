{
  "author": "Thierry Wong",
  "bugs": "https://github.com/gnowth/gnowth/issues",
  "description": "Boilerplate",
  "license": "MIT",
  "name": "gnowth",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "version": "0.0.1",
  "repository": "https://github.com/gnowth/gnowth.git",
  "homepage": "https://github.com/gnowth/gnowth#readme",
  "workspaces": [
    "./packages/*"
  ],
  "eslintConfig": {
    "extends": [
      "@gnowth/eslint-config/javascript"
    ],
    "ignorePatterns": [
      "**/coverage",
      "**/dist"
    ]
  },
  "engines": {
    "node": "16.4.0",
    "npm": "7.18.1"
  },
  "lint-staged": {
    "*.{json,css,scss,md}": "prettier --write",
    "*.{ts,js,tsx,jsx}": "eslint --fix"
  },
  "dependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@gnowth/eslint-config": "0.0.1",
    "@gnowth/prettier-config": "0.0.1",
    "babel-eslint": "10.1.0",
    "eslint": "7.30.0",
    "github-markdown-css": "4.0.0",
    "husky": "7.0.0",
    "lerna": "4.0.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.2"
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean",
    "clean:temp": "lerna run clean:dist && lerna run clean:log && rimraf coverage",
    "git:fetch": "git fetch --prune",
    "git:rebase": "git pull --rebase origin main",
    "git:view": "git log --all --graph --decorate --pretty=oneline --abbrev-commit",
    "lerna": "lerna",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:workspaces": "lerna run lint",
    "prepare": "husky install",
    "setup": "npm install"
  }
}
