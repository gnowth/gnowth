{
  "author": "Thierry Wong",
  "bugs": "https://github.com/gnowth/gnowth/issues",
  "description": "Boilerplate",
  "homepage": "https://github.com/gnowth/gnowth#readme",
  "license": "AGPL-3.0-only",
  "name": "gnowth",
  "packageManager": "npm@10.8.2",
  "prettier": "@gnowth/prettier-config",
  "private": true,
  "repository": "https://github.com/gnowth/gnowth.git",
  "version": "0.0.0",
  "workspaces": [
    "./packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "@gnowth/eslint-config"
    ],
    "ignorePatterns": [
      "**/__generated__/**/*",
      "**/.next/**/*",
      "**/.parcel-cache/",
      "**/.turbo/**/*",
      "**/artifact/",
      "**/build/**/*",
      "**/coverage/**/*",
      "**/node_modules/**/*",
      "**/volumes/**/*"
    ],
    "root": true
  },
  "engines": {
    "node": "20.16.0",
    "npm": "10.8.1"
  },
  "jest": {
    "preset": "@gnowth/jest-config"
  },
  "lint-staged": {
    "**/!(__generated__)/*.{css,json,md,scss,yaml,yml}": "prettier --write",
    "*.{cjs,js,jsx,mdx,mjs,ts,tsx}": "eslint --fix"
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "ignoreDeps": [
      "npm"
    ],
    "rebaseWhen": "conflicted"
  },
  "?dependencies": {
    "@testing-library/jest-dom": "required here to force this version at root",
    "jest-environment-jsdom?": "required explicitly since v29",
    "ts-jest?": "required here to force this version at root"
  },
  "?scripts": {
    "ci:project:storybook:e2e?": "DEBT: issue where storybook is showing preview instead of component. short term fix is to use storybook in dev mode. https://github.com/chromaui/chromatic-cli/issues/312",
    "ci:project:storybook:e2e": "start-server-and-test 'serve -l 6006 packages/boilerplate-styleguide/storybook-static' http://localhost:6006 'npm run workspace:styleguide test:e2e'"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@gnowth/eslint-config": "0.0.0",
    "@gnowth/jest-config": "0.0.0",
    "@gnowth/prettier-config": "0.0.0",
    "@gnowth/typescript-config": "0.0.0",
    "@testing-library/jest-dom": "6.4.8",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "github-markdown-css": "5.6.1",
    "husky": "9.1.4",
    "jest-environment-jsdom": "29.7.0",
    "lerna": "8.1.8",
    "lint-staged": "15.2.9",
    "netlify-cms-proxy-server": "1.3.24",
    "nodemon": "3.1.4",
    "npm-check-updates": "17.0.6",
    "prettier": "3.3.3",
    "serve": "14.2.3",
    "start-server-and-test": "2.0.5",
    "ts-jest": "29.2.4",
    "ts-node": "10.9.2",
    "turbo": "2.0.12",
    "typescript": "5.5.4"
  },
  "scripts": {
    "cd:artifact:unzip": "unzip -qq artifact.zip -d .",
    "cd:artifact:zip": "zip -r artifact.zip . -x \\*.git/\\* \\*node_modules/\\* .editorconfig \\*.husky/\\* \\*.vscode/\\* \\*docs/\\* \\*.next/\\* \\*src/\\* \\*public/\\* \\*.turbo/\\* \\*.github/\\*",
    "cd:code:version-pre": "lerna version --exact --conventional-commits --conventional-prerelease --yes",
    "cd:code:version": "lerna version --exact --conventional-commits --conventional-graduate --yes",
    "cd:database:backup": "echo database to backup",
    "cd:database:fixture": "echo database to add fixtures",
    "cd:database:migrate-back": "echo migrate database back",
    "cd:database:migrate-dry": "echo migrate database dry",
    "cd:database:migrate": "echo migrate database",
    "cd:infrastructure:cleanup": "echo clean temp infrastructure",
    "cd:infrastructure:provision": "echo provision infrastructure",
    "cd:library:publish-dry": "echo publish dry run",
    "cd:library:publish": "lerna publish from-package --yes",
    "cd:project:nextjs:deploy": "npx surge --project ./artifact/build-web --domain $SITE_DOMAIN",
    "cd:project:nextjs:teardown": "npx surge teardown $SITE_DOMAIN",
    "ci:build-dev": "turbo run build-dev",
    "ci:build": "turbo run build",
    "ci:check:lint": "turbo run lint",
    "ci:check:test": "turbo run test",
    "ci:check:typecheck": "turbo run typecheck",
    "ci:check": "concurrently npm:ci:check:* --group",
    "ci:e2e:mock": "BASE_URL_TEST=http://localhost:3000 start-server-and-test 'serve -l 3000 artifact/build-web' http://localhost:3000 'turbo run test:mock'",
    "ci:e2e:regression": "turbo run test:regression",
    "ci:e2e:smoke": "turbo run test:smoke",
    "ci:project:nextjs:build": "npm run workspace:nextjs build",
    "ci:project:storybook:build": "npm run workspace:styleguide build",
    "ci:project:storybook:e2e": "start-server-and-test 'npm run workspace:styleguide start-ci' http://localhost:6006 'npm run workspace:styleguide test:e2e'",
    "ci:setup": "npm ci --cache ~/.cache-npm --prefer-offline",
    "docker:compose": "docker-compose -f devops/docker-compose.yml up",
    "docker:service:plantuml": "docker run -d -p 8888:8080 plantuml/plantuml-server:jetty",
    "git:commit": "cz",
    "git:commit:temp": "HUSKY=0 git commit -am 'temp commit'",
    "git:delete:dev": "git branch -d $(git branch -l 'dev-*')",
    "git:delete:tag": "git tag -d $(git tag -l '*gnowth*')",
    "git:fetch": "git fetch --prune",
    "git:rebase": "git pull --rebase origin main",
    "git:view": "git log --all --graph --decorate --pretty=oneline --abbrev-commit",
    "local:check-debug:lint": "eslint --debug --ignore-path .gitignore --fix --ext cjs,js,jsx,mdx,mjs,ts,tsx .",
    "local:check-debug:typecheck": "tsc --listFilesOnly",
    "local:check-watch:test": "jest --coverage --watchAll",
    "local:check:lint": "eslint --ignore-path .gitignore --fix --ext cjs,js,jsx,mdx,mjs,ts,tsx .",
    "local:check:test": "jest --coverage",
    "local:check:typecheck": "tsc",
    "local:check": "concurrently npm:local:check:* --group",
    "local:clean:modules": "turbo run clean:modules && rm -rf node_modules",
    "local:clean:temp": "turbo run clean:temp && rm -rf coverage artifact build node_modules/.cache .parcel-cache .next .turbo artifact.zip",
    "local:clean": "npm run local:clean:temp && npm run local:clean:modules",
    "local:environment": "export $(grep -v '^#' .env.local | xargs)",
    "local:format": "prettier --loglevel silent --write **/*.{cjs,css,js,json,jsx,md,mdx,mjs,scss,ts,tsx,yaml,yml}",
    "local:project:nextjs:analyze": "npm run workspace:nextjs build-analyze",
    "local:project:nextjs:preview:clean": "npx surge list | grep -oE 'gnowth-boilerplate-preview-\\d*.surge.sh' | grep -Ev '-1-|-2-' | sort | xargs -I project surge teardown project",
    "local:project:nextjs:preview:list": "npx surge list | grep -oE 'gnowth-boilerplate-preview-\\d*.surge.sh' | sort",
    "local:project:nextjs:start-dev": "npm run workspace:nextjs start-dev",
    "local:project:playwright:e2e:mock": "BASE_URL_TEST=http://localhost:3000 npm run workspace:playwright test:mock",
    "local:project:storybook:e2e": "npm run workspace:styleguide test:e2e",
    "local:project:storybook:publish": "export $(grep -v '^#' .env.local | xargs) && npm run workspace:styleguide publish",
    "local:project:storybook:start": "npm run workspace:styleguide start-dev",
    "local:run": "nodemon --exec 'ts-node --transpileOnly'",
    "local:start-cms": "concurrently 'netlify-cms-proxy-server' 'npm run workspace:nextjs start-dev'",
    "local:start-docker": "docker-compose -f ./configs/docker-compose.yml up",
    "prepare": "if test \"$CI\" != true; then husky; fi",
    "setup:cache:verify": "npm cache verify",
    "setup:refresh": "npm run local:clean && rm -rf package-lock.json && time npm install",
    "setup:upgrade": "ncu --interactive --deep --reject '@gnowth/*'",
    "setup:upgrade:minor": "ncu --interactive --deep --reject '@gnowth/*' --target minor",
    "setup:upgrade:patch": "ncu --interactive --deep --reject '@gnowth/*' --target patch",
    "setup": "time npm install --frozen-lockfile",
    "workspace:eslint": "npm run --workspace=@gnowth/eslint-config",
    "workspace:language": "npm run --workspace=@gnowth/ty-language",
    "workspace:nestjs": "npm run --workspace=@gnowth/nestjs-boilerplate",
    "workspace:nextjs": "npm run --workspace=@gnowth/nextjs-boilerplate",
    "workspace:playwright": "npm run --workspace=@gnowth/playwright-boilerplate",
    "workspace:styleguide": "npm run --workspace=@gnowth/styleguide-boilerplate"
  }
}
